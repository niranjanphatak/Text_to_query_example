# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/
DB_NAME=credit_card_acquisition

# OpenAI Configuration (ALL REQUIRED - NO DEFAULTS)
# This application uses LangChain's ChatOpenAI with custom base URL support
# Get your API key from: https://platform.openai.com/api-keys

OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Base URL (REQUIRED)
# The application supports any OpenAI-compatible API endpoint:
# 
# For OpenAI (Official):
#   OPENAI_BASE_URL=https://api.openai.com/v1
#
# For Google Gemini (via OpenAI-compatible endpoint):
#   OPENAI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai
#
# For Azure OpenAI:
#   OPENAI_BASE_URL=https://your-resource.openai.azure.com/openai/deployments/your-deployment
#
# For Local LLM (LM Studio):
#   OPENAI_BASE_URL=http://localhost:1234/v1
#
# For Local LLM (Ollama):
#   OPENAI_BASE_URL=http://localhost:11434/v1
#
OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI Model (REQUIRED)
# For OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
# For Google Gemini: gemini-2.5-flash-lite, gemini-2.0-flash-exp
# For Azure: your-deployment-name
# For Local LLM: your-model-name (e.g., llama2, mistral)
OPENAI_MODEL=gpt-4o-mini

# Server Configuration
FLASK_ENV=development
FLASK_DEBUG=True
