# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/
DB_NAME=credit_card_acquisition

# OpenAI Configuration (ALL REQUIRED - NO DEFAULTS)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Base URL (REQUIRED)
# For OpenAI: https://api.openai.com/v1
# For Azure OpenAI: https://your-resource.openai.azure.com/openai/deployments/your-deployment
# For Local LLM (LM Studio): http://localhost:1234/v1
# For Local LLM (Ollama): http://localhost:11434/v1
OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI Model (REQUIRED)
# For OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
# For Azure: your-deployment-name
# For Local LLM: your-model-name
OPENAI_MODEL=gpt-4o-mini

# Server Configuration
FLASK_ENV=development
FLASK_DEBUG=True
